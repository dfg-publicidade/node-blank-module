{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "rootDir": "./src",
        "sourceRoot": ".",
        "outDir": "dist",
        "composite": true,
        "incremental": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "inlineSourceMap": true
    }, 
    "include": [
        "src/**/*.ts",
        "test/**/*.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "extension": [
        ".ts"
    ],
    "files": [
        "src/index.d.ts"
    ]
}